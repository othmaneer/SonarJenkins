pipeline {
    agent any
    tools {
        maven 'maven'
    }

    stages {
        stage('Git Clone') {
            steps {
                script {
                    checkout([$class: 'GitSCM', branches: [[name: 'main']], userRemoteConfigs: [[url: 'https://github.com/othmaneer/SonarJenkins.git']]])

                }
            }
        }

stage('Build Server') {
    steps {
    script{
        dir('server') {

            withSonarQubeEnv('SonarServer') {
                bat "mvn clean verify sonar:sonar"
            }

                }


    }
    }
}


stage('Build Admin') {
    steps {
    script{
        dir('admin') {

            withSonarQubeEnv('SonarServer') {
                bat "mvn clean verify sonar:sonar"
            }

                }


    }
    }
}

stage('Build Client') {
    steps {
    script{
        dir('client') {

            withSonarQubeEnv('SonarServer') {
                bat "mvn clean verify sonar:sonar"
            }

                }


    }
    }
}

stage('Build Evenement') {
    steps {
    script{
        dir('evenement') {

            withSonarQubeEnv('SonarServer') {
                bat "mvn clean verify sonar:sonar"
            }

                }


    }
    }
}

stage('Build Reservation') {
    steps {
    script{
        dir('reservation') {

            withSonarQubeEnv('SonarServer') {
                bat "mvn clean verify sonar:sonar"
            }

                }


    }
    }
}

    }
}